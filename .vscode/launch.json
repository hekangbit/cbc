{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Debug Go Program",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src",
      "args": ["${workspaceFolder}/test/hello.cb"]
    },
    {
      "name": "Debug ANTLR4 Grammar",
      "type": "antlr-debug",
      "request": "launch",
      "input": "${workspaceFolder}/hello.cb",
      "grammar": "${workspaceFolder}/grammar/Cb.g4",
      "startRule": "prog",
      "printParseTree": true,
      "visualParseTree": true
    },
    {
      "name": "Debug ANTLR4 Grammar Test",
      "type": "antlr-debug",
      "request": "launch",
      "input": "${workspaceFolder}/test/test.txt",
      "grammar": "${workspaceFolder}/test/Test.g4",
      "startRule": "prog",
      "printParseTree": true,
      "visualParseTree": true
    }
  ]
}